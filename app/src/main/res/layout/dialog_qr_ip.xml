<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <!-- TextView for "Waiting For Connection" -->
    <TextView
        android:id="@+id/waitingforconnection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Waiting For Connection"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="8dp" />

    <!-- ProgressBar below the TextView -->
    <ProgressBar
        android:id="@+id/connection_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="16dp" />

    <!-- TextView to show the IP address -->
    <TextView
        android:id="@+id/dialog_ip_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IP Address: "
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="16dp" />

    <!-- ImageView for QR code (optional if you want to show a QR code for IP) -->
    <ImageView
        android:id="@+id/dialog_qr_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="QR Code" />

</LinearLayout>
